<div class="mt-4">
  <div class="row">
    {{#each courses}}
    <div class="col-sm-6 col-lg-4 mt-2 mb-2">
      <div class="card card-courses-item h-100">
        <a href="/courses/{{this.slug}}">
          <img src="{{this.image}}" class="card-img-top" style="width: 100%; height: 200px; object-fit: cover"
            alt="..." />
        </a>
        <div class="card-body d-flex flex-column">
          <a href="/courses/{{this.slug}}">
            <h5 class="card-title">{{this.name}}</h5>
          </a>
          <p class="card-text flex-grow-1">{{truncate this.description 100}}</p>
          <a href="/courses/{{this.slug}}" class="btn btn-primary mt-auto">View detail</a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>